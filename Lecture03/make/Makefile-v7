CC = gcc

ifeq "${DEBUG}" "yes"
	CFLAGS = -g -Wall -std=c17
else
	CFLAGS = -O3 -Wall -std=c17
endif

CFLAGS = -O3 -Wall -pedantic -std=c18
LIB = lib
CHEADERS = ${wildcard *.h}
PROGNAME = main

all: ${PROGNAME}

${PROGNAME}: main.o ${LIB}/libstat.a ${LIB}/libprint_vector.a
	@${CC} ${CFLAGS} -o $@ $< -L./${LIB}/ -lstat -lprint_vector

${LIB}:
	@mkdir -p $@

${LIB}/lib%.a: %.o ${LIB}
	@ar rs $@ $<

${LIB}/libstat.a: stat.o ${LIB}
	@ar rs $@ $<

main.o: main.c ${CHEADERS}
	@${CC} ${CFLAGS} -c $<

%.o: %.c %.h
	@${CC} ${CFLAGS} -c $<


.PHONY: clean clean-all
clean:
	rm -f *.o

clean-all: clean
	rm -rf ${LIB}
	rm -f ${PROGNAME}
