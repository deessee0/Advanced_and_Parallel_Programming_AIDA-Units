CC = gcc
CFLAGS = -O3
LIB = lib
CHEADERS = ${wildcard *.h}
PROGNAME = main
SHARED = no

ifeq "${DEBUG}" "yes"
	CFLAGS = -g -Wall -std=c17
else
	CFLAGS = -O3 -Wall -std=c17
endif

ifeq "${SHARED}" "yes"
	
else
	
endif

all: ${PROGNAME}

main: ${PROGNAME}.o ${LIB}/libbst.a 
	${CC} ${CFLAGS} -o $@ $< -L./${LIB}/ -lbst

${LIB}:
	mkdir -p $@

${LIB}/libbst.a: bst.o node.o | ${LIB}
	ar rs $@ $^

main.o: main.c ${CHEADERS}
	${CC} ${CFLAGS} -c $<

%.o: %.c %.h
	${CC} ${CFLAGS} -c $<


.PHONY: clean clean-all
clean:
	rm -f *.o

clean-all: clean
	rm -rf ${LIB}
	rm -f ${PROGNAME}
